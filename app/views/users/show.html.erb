<%= render 'shared/user', user: @user %>
    <div class="bio">
        <p> Bio: <%= @user.bio%> </P>      
    </div>  

    <div class="posts">
  <h2>Recent Posts</h2>
  <% @user.recent_posts.each do |post| %>
    <div class="post">
        <p class="post-title"><%= post.title %></p>
        <p class="post-text"><%= post.text %></p>
    </div>
  <% end %>
</div>

   